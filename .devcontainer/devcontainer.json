{
    "name": "FastAPI Dev",
    "context": "..",
    "dockerFile": "../Dockerfile",
    "runArgs": [
        "--name",
        "error_hub_dev"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    }
                },
                "terminal.integrated.env.linux": {
                    "PROMPT_COMMAND": "BRANCH=$(git branch 2>/dev/null | grep '^*' | awk '{print $2}'); PS1='\\[\\033[1;32m\\]\\u\\[\\033[0m\\]@\\[\\033[1;34m\\]\\h\\[\\033[0m\\] ðŸ“‚ \\[\\033[1;36m\\]\\w \\[\\033[0;33m\\]ðŸŒ¿ ('\"$BRANCH\"')\\[\\033[0m\\]\\$ '"
                }
            },
            "extensions": [
                "ms-python.python",
                "hashicorp.terraform",
                "ms-python.black-formatter"
            ]
        }
    },
    "forwardPorts": [
        8000
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "chmod +x .devcontainer/post-create.sh && .devcontainer/post-create.sh"
}